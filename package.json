{
  "name": "josuke",
  "version": "0.0.1",
  "description": "A NPM library to validate email addresses.",
  "license": "UNLICENSED",
  "author": "Guhan <gukkey@protonmail.com>",
  "type": "module",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "types": "./types/index.d.ts"
    }
  },
  "scripts": {
    "test": "mocha tests/test.js",
    "clean": "rimraf dist",
    "prebuild": "npm run clean && mkdir dist && mkdir dist\\esm && mkdir dist\\cjs",
    "build:esm": "copy index.js dist\\esm\\index.js",
    "build:cjs": "babel index.js --out-file dist\\cjs\\index.js && echo {\"type\":\"commonjs\"} > dist\\cjs\\package.json",
    "build": "npm run prebuild && npm run build:esm && npm run build:cjs",
    "build:types": "tsc"
  },
  "devDependencies": {
    "@babel/cli": "^7.28.3",
    "@babel/core": "^7.28.3",
    "@babel/preset-env": "^7.28.3",
    "chai": "^6.0.1",
    "cross-env": "^10.0.0",
    "mocha": "^11.7.2",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.2"
  },
  "keywords": [
    "email",
    "validation"
  ]
}
